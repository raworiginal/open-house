<%- include('../partials/_html-head.ejs', {title: 'Edit Listing'}) %>
<%- include('../partials/_nav-bar.ejs') %>

  <main>
    <article>
    <h1>Add New Listings</h1>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
      
      <label for="streetAddress">Address:</label>
      <input 
        type="text" 
        name="streetAddress" 
        id="streetAddress" 
        value="<%= listing.streetAddress %>" 
        required
      />

      <label for="city">City:</label>
      <input 
        type="text" 
        name="city" 
        id="city"
        value="<%= listing.city %>" 
        required
      />

      <label for="price">Price:</label>
      <input 
        type="number" 
        min="0" name="price" 
        id="price"
        value="<%= listing.price %>" 
        required
      />

      <label for="size">Size:</label>
      <input 
        type="number" 
        min="0" 
        id="size" 
        name="size" 
        required
        value="<%= listing.size %>"
      />

      <button type="submit">Edit Listing</button>
    </form>
    </article>
  </main>
</body>
</html>